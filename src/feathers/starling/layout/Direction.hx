package feathers.starling.layout;

/**
 * Constants that define a direction.
 *
 * @productversion Feathers 3.0.0
 */
class Direction 
{

	/**
	 * The object will be oriented vertically.
	 *
	 * @productversion Feathers 3.0.0
	 */
	public static inline var VERTICAL:String = "vertical";

	/**
	 * The object will be oriented horizontally.
	 *
	 * @productversion Feathers 3.0.0
	 */
	public static inline var HORIZONTAL:String = "horizontal";

	/**
	 * The object will be oriented in no particular direction.
	 *
	 * @productversion Feathers 3.3.0
	 */
	public static inline var NONE:String = "none";
	
}