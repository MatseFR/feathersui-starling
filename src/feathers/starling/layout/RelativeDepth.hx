package feathers.starling.layout;

/**
 * Constants for positioning an item at a depth relative to another item's
 * depth in a layout.
 *
 * @productversion Feathers 3.0.0
 */
class RelativeDepth 
{
	
	/**
	 * The item will be positioned above another item.
	 *
	 * @productversion Feathers 3.0.0
	 */
	public static inline var ABOVE:String = "above";

	/**
	 * The item will be positioned below another item.
	 *
	 * @productversion Feathers 3.0.0
	 */
	public static inline var BELOW:String = "below";
	
}