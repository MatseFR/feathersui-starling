package feathers.layout;

/**
 * Constants that define an orientation or set of orientations.
 *
 * @productversion Feathers 3.0.0
 */
class Orientation 
{

	/**
	 * Landscape orientation where width is larger than height.
	 *
	 * @productversion Feathers 3.0.0
	 */
	public static inline var LANDSCAPE:String = "landscape";

	/**
	 * Portrait orientation where height is larger than width.
	 *
	 * @productversion Feathers 3.0.0
	 */
	public static inline var PORTRAIT:String = "portrait";

	/**
	 * No orientation.
	 *
	 * @productversion Feathers 3.0.0
	 */
	public static inline var NONE:String = "none";

	/**
	 * Both landscape and portrait orientation.
	 *
	 * @productversion Feathers 3.0.0
	 */
	public static inline var BOTH:String = "both";
	
}